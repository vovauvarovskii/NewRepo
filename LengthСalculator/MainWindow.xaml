<Window x:Class="LengthСalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LengthСalculator"
        mc:Ignorable="d"
        Title="Калькудятор  длинны" Height="450" Width="800">
    <Grid Margin="50,50,35,50">

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    >
            <Label Margin="5"  >из</Label>
            <ComboBox  MinWidth="100"   Name="cbIn"  Margin="5" ></ComboBox>
            <Label Margin="5"  >В</Label>
            <ComboBox MinWidth="100"  Name="cbOut" Margin="5" ></ComboBox>
            <TextBox MinWidth="100"  x:Name="tbvalue" Margin="5" ></TextBox>
            <Button x:Name="btGo"
                    Margin="5"  Padding="5,0,5,0"
                    Click="btGo_Click">Рассчитать</Button>
                    
            <Label Name="lbRez" Margin="5">Ответ:</Label>
        </StackPanel>

    </Grid>
</Window>
